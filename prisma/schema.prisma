// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  rg       String  @unique
  phone    String  @unique
  address  String
  active   Boolean @default(true)
}

model emergency {
  id       String  @id @default(uuid())
  name     String
  user     String
  email    String  @unique
  password String
}

